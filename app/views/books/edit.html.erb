<h1>Editing Book</h1>
<!--更新機能のためのform_withヘルパー、urlに更新の情報を送信-->
<%= form_with model: @book, url: "/books/#{@book.id}", method: :patch do|f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <p><%= f.submit 'Update Book' %></p>
  <p><%= link_to "Show", "books/#{@book.id}"  %>
  |
  <%= link_to "Back", "/books" %>
  </p>
  
<% end %>

